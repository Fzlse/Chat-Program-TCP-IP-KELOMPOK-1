<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChatClient" Height="454" Width="595"
        Background="{DynamicResource BgColor}"
        Foreground="{DynamicResource FgColor}">

    <Grid Background="{DynamicResource BgColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top: connection controls + theme button -->
        <StackPanel Orientation="Horizontal" Margin="8">
            <TextBox x:Name="IpTextBox" Width="140" Text="127.0.0.1"
                     Background="{DynamicResource TextBoxBg}"
                     Foreground="{DynamicResource TextBoxFg}"/>
            <TextBox x:Name="PortTextBox" Width="70" Margin="6,0,0,0" Text="5000"
                     Background="{DynamicResource TextBoxBg}"
                     Foreground="{DynamicResource TextBoxFg}"/>
            <TextBox x:Name="UserTextBox" Width="140" Margin="6,0,0,0" Text="ASYROF"
                     Background="{DynamicResource TextBoxBg}"
                     Foreground="{DynamicResource TextBoxFg}"/>

            <Button x:Name="ConnectButton" Content="Connect" Margin="6,0,0,0"
                    Background="{DynamicResource ButtonBg}"
                    Foreground="{DynamicResource ButtonFg}"
                    Click="ConnectButton_Click"/>
            <Button x:Name="DisconnectButton" Content="Disconnect" Margin="6,0,0,0"
                    Background="{DynamicResource ButtonBg}"
                    Foreground="{DynamicResource ButtonFg}"
                    Click="DisconnectButton_Click" IsEnabled="False"/>
            <Button x:Name="ThemeButton" Content="🌙" Margin="6,0,0,0"
                    Background="{DynamicResource ButtonBg}"
                    Foreground="{DynamicResource ButtonFg}"
                    Click="ThemeButton_Click"/>
        </StackPanel>

        <!-- Middle: users and messages -->
        <Grid Grid.Row="1" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Users" Grid.Column="0" Margin="0,0,6,0"
                      Foreground="{DynamicResource FgColor}"
                      Background="{DynamicResource BgColor}">
                <ListBox x:Name="UsersListBox" FontSize="11"
                         Background="{DynamicResource UsersBg}"
                         Foreground="{DynamicResource TextBoxFg}"/>
            </GroupBox>

            <GroupBox Header="Chat" Grid.Column="1"
                      Foreground="{DynamicResource FgColor}"
                      Background="{DynamicResource BgColor}">
                <ListBox x:Name="MessagesListBox" FontSize="11"
                         Background="{DynamicResource ChatBg}"
                         Foreground="{DynamicResource TextBoxFg}"/>
            </GroupBox>
        </Grid>

        <!-- Bottom: input -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="8">
            <TextBox x:Name="InputTextBox" VerticalAlignment="Center"
                     HorizontalAlignment="Stretch" MinWidth="300"
                     Background="{DynamicResource TextBoxBg}"
                     Foreground="{DynamicResource TextBoxFg}"
                     TextChanged="InputTextBox_TextChanged"/>
            <Button x:Name="SendButton" Content="Send" Width="80" Margin="6,0,0,0"
                    Background="{DynamicResource ButtonBg}"
                    Foreground="{DynamicResource ButtonFg}"
                    Click="SendButton_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
